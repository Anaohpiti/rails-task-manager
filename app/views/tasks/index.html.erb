<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= task.completed ? "✔️" : "❌" %> - <%=link_to task.title, task_path(task)%></li>
    <%= link_to "🗑️ - Delete #{task.title}",
                task_path(task),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
<%=link_to "Create a new task", new_task_path%>
